<h1>Update Pet</h1>

<form method="post" action="/pets/<%= @pet.id %>">
  
  <label>Pet's name: </label>
  <br>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="pet_name" value=<%= @pet.name %> >
  <br><br>
  <h3>Owners</h3>
  <br>
  <% @owners.each do |owner| %>
    <label><%=owner.name %></label>
    <input type="radio" id=<%=owner.id %> name="owner_id" value=<%=owner.id %> <%= 'checked' if  owner.pets.include?(@pet) %> >
    <br>
  <% end %>
  <br>
  <h3>Create a new owner</h3>
  <br>
  <label>Name:</label>
  <input id="owner_name" type="text" name="owner[name]" >
  <button type="submit">Update Pet</button>
</form>

