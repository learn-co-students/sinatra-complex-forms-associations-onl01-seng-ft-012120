<h1>Update Pet</h1>
<form action="/pets/<%=@pet.id%>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>

  <br>

  <input type="text" name="pet_name" value='<%= @pet.name %>'>

  <h3>Existing Owners</h3>
  <% @owners.each do |owner| %>
    <input type="radio" name="owner_id" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if owner.id == @pet.owner.id%>><%= owner.name %><br>
  <% end %>
  <br>

  <h3>New Owner:</h3>
    <label>Owner Name:</label>
      <input  type="text" name="owner_name" id="owner[name]>"</input>
    <br>

  <input type="submit" value="Update Pet">
</form>
